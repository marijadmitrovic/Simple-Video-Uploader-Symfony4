{% extends 'base.html.twig' %}
{% block title %}
    {{ video.title }}

{% endblock %}


{% block body %}

  <main role="main">


    <div class=" py-5 bg-light">
      <div class="container">
          <a href="{{ path('home') }}" class="btn btn-danger">Back</a>
          <br><br>
          <div class="row">
              <video width="100%" height="400px" controls style="background-color: rgba(1, 1, 1,0.9)">
                <source src="{{ asset('videob/' ~ video.file) }}" type="video/mp4">
              </video>
          </div>

          <div class="row">
              <div class="col-md-12">
                <div class="card mb-4 box-shadow">

                  <div class="card-body">

                    <h3> {{ video.title }}</h3>
                    <hr>
                    <p class="card-text">Description :{{ video.description }}</p>

                    <div class="d-flex justify-content-between align-items-center">

                    </div>
                      <a href="{{ path('new_comment',{'id': video.id}) }}" class="btn btn-info">Add Comment</a>
                  </div>
                </div>
              </div>
           </div>


          <h3>Comments : </h3>
            {% for comment in comments %}
                <div class="row  align-items-center">
                  <div class="col-8 col-offset-2">

                      <div style=" border: 1px solid black;text-align: center; color:#313131">

                        <h4> Name : {{ comment.name }}</h4>
                        <hr>
                        <br>
                        <p> {{ comment.text }}</p>
                      </div>
                      <br>
                  </div>
                </div>
            {% endfor %}
      </div>

    </div>
  </main>

{% endblock %}

