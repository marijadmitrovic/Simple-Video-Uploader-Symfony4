{% extends 'base.html.twig' %}
{% block title %}
    {{ video.title }}

{% endblock %}


{% block body %}

  <main role="main">


    <div class=" py-5 bg-light">
      <div class="container">

        <a href="{{ path('home') }}" class="btn btn-danger">Back</a>
          <br><br>

        <div class="row">

            <iframe width="100%" height="315" src="{{ asset('videob/' ~ video.file) }}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>

        </div>

        <div class="row">
              <div class="col-md-12">
                <div class="card mb-4 box-shadow">

                  <div class="card-body">

                    <h3> {{ video.title }}</h3>
                    <hr>
                    <p class="card-text">Description :{{ video.description }}</p>

                    <div class="d-flex justify-content-between align-items-center">



                    </div>
                  </div>
                </div>
              </div>
        </div>
      </div>

    </div></main>

{% endblock %}