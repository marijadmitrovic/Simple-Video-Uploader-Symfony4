{% extends 'base.html.twig' %}

{% block body %}

<main role="main">


    <div class=" py-5 bg-light">
        <div class="container">

            <a href="{{ path('home') }}" class="btn btn-danger">Back</a>
            <br><br>



            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4 box-shadow">

                        <div class="card-body">

                            <div class="d-flex justify-content-between align-items-center">

                                {{ form_start(form) }}
                                {#{{ form_row(form.username) }}#}
                                {#{{ form_row(form.text) }}#}

                                {{ form_widget(form) }}

                                <button type="submit" class="btn btn-info"> Save Comment </button>

                               {{ form_end(form) }}
                            </div>
                        </div>

                </div>
            </div>
            </div>
        </div>

    </div>

</main>
{% endblock %}
